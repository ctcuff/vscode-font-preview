{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "web/**",
    "./dist/**/*",
    "./*.js"
  ]
}

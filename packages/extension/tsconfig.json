{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../../dist/extension",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "composite": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}

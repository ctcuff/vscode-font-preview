{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "../../dist/web",
    "jsx": "react",
    "rootDir": "./src",
    "module": "es2020",
    "composite": true
  },
  "include": [
    "./src/**/*",
    "./src/assets/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}

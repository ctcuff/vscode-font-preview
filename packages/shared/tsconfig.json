{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../../dist/shared",
    "lib": [
      "ES2020"
    ],
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "skipLibCheck": true,
    "composite": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./index.ts",
    "./src"
  ]
}
